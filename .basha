
parse_git_branch() {
        git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

export PS1="[\$(date +%k:%M)] \u@\h \[\033[32m\]\w\[\033[33m\]\$(parse_git_branch)\[\033[00m\] $ "
# to add date use \D{%F %T} as prefix for PS1

function infomsg {
    zenity --info --text="$1"
}

function donemsg {
    infomsg "done"
}

function bzlfind {
    bzlst "$1" | grep "$2"
}

## HIST file opts
export HISTTIMEFORMAT="%h %d %H:%M:%S "
# store each command immediately after exec (usually stored when session ends)
PROMPT_COMMAND='history -a'
export HISTIGNORE='ls:ps:history:bzlst:bzlfind:git:exit:df:du"
shopt -s cmdhist

